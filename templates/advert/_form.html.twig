{{form_start(form)}}
{{form_row(form.title)}}
{{form_row(form.content)}}
{{form_row(form.author)}}
{{form_row(form.email)}}
{{form_row(form.category)}}
{{form_row(form.price)}}
<ul class="pictures" data-index="{{form.pictures|length >0 ? form.pictures | last.vars.name +1 : 0}}"
data-prototype="{{form_widget(form.pictures.vars.prototype)|e('html_attr')}}"
>
	{% for picture in form.pictures %}
		<li>{{ form_row(picture.file) }}</li>
	{% endfor %}
</ul>
<button type="button" class="btn btn-secondary" id="add_item_link" data-collection-holder-class="pictures"><i class="bi bi-card-image"></i> Ajouter une image </button>
<br>
<button class="btn btn-success mt-2 mb-2">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
